	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"// Sayacı ve toplam süreyi sıfırla (Sadece ilk istekte çalışması için kontrol eklenebilir ama basit tutalım)\r",
					"if (!pm.environment.get(\"reqCount\") || pm.info.iteration === 0) {\r",
					"    pm.environment.set(\"totalTime\", 0);\r",
					"    pm.environment.set(\"reqCount\", 0);\r",
					"    console.log(\"Performans sayacı başlatıldı.\");\r",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"let totalTime = Number(pm.environment.get(\"totalTime\")) || 0;\r",
					"let reqCount = Number(pm.environment.get(\"reqCount\")) || 0;\r",
					"\r",
					"\r",
					"totalTime += pm.response.responseTime;\r",
					"reqCount += 1;\r",
					"\r",
					"\r",
					"pm.environment.set(\"totalTime\", totalTime);\r",
					"pm.environment.set(\"reqCount\", reqCount);\r",
					"\r",
					"\r",
					"let averageTime = totalTime / reqCount;\r",
					"\r",
					"\r",
					"pm.test(`Performance: Running Average (${Math.round(averageTime)}ms) is under 400ms`, function () {\r",
					"    pm.expect(averageTime).to.be.below(400); \r",
					"});"
				]
			}
		}
